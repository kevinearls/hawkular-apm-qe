<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.hawkular</groupId>
    <artifactId>hawkular-parent</artifactId>
    <version>51</version>
  </parent>
  <groupId>org.hawkular.apm.qe</groupId>
  <artifactId>java-automation</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Hawkular APM QE core automation</name>
  <description>Hawkular APM QE core automation</description>

  <properties>
    <version.io.opentracing>0.20.10</version.io.opentracing>
    <version.org.hawkular.apm.java.client>0.0.1-SNAPSHOT</version.org.hawkular.apm.java.client>
    <version.org.hawkular.apm>0.14.3.Final</version.org.hawkular.apm>
    <version.org.projectlombok>1.16.14</version.org.projectlombok>
    <version.jaeger>0.17.0</version.jaeger>
    <version.org.slf4j>1.7.25</version.org.slf4j>
  </properties>

  <dependencies>

    <!-- OpenTracing: https://github.com/opentracing/opentracing-java -->
    <dependency>
      <groupId>io.opentracing</groupId>
      <artifactId>opentracing-api</artifactId>
      <version>${version.io.opentracing}</version>
    </dependency>

    <!-- Hawkular APM java client: https://github.com/Hawkular-QE/hawkular-apm-client-java -->
    <dependency>
      <groupId>org.hawkular.apm.client</groupId>
      <artifactId>hawkular-apm-java-client</artifactId>
      <version>${version.org.hawkular.apm.java.client}</version>
    </dependency>

    <!-- Hawkular-APM API: https://github.com/hawkular/hawkular-apm/tree/master/api -->
    <dependency>
      <groupId>org.hawkular.apm</groupId>
      <artifactId>hawkular-apm-api</artifactId>
      <version>${version.org.hawkular.apm}</version>
    </dependency>

    <!-- Hawkular-APM OpenTracing support: https://github.com/hawkular/hawkular-apm/tree/master/client/opentracing -->
    <dependency>
      <groupId>org.hawkular.apm</groupId>
      <artifactId>hawkular-apm-client-opentracing</artifactId>
      <version>${version.org.hawkular.apm}</version>
    </dependency>

    <!-- Hawkular APM Span REST recorder: https://github.com/hawkular/hawkular-apm/tree/master/client/trace-publisher-rest-client -->
    <dependency>
      <groupId>org.hawkular.apm</groupId>
      <artifactId>hawkular-apm-trace-publisher-rest-client</artifactId>
      <version>${version.org.hawkular.apm}</version>
    </dependency>

    <!-- Jaeger -->
    <dependency>
      <groupId>com.uber.jaeger</groupId>
      <artifactId>jaeger-core</artifactId>
      <version>${version.jaeger}</version>
    </dependency>

    <!-- Project Lombok: https://projectlombok.org/ -->
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>${version.org.projectlombok}</version>
    </dependency>

    <!-- slf4j logging: https://www.slf4j.org/ -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jul-to-slf4j</artifactId>
      <version>${version.org.slf4j}</version>
    </dependency>

    <!-- TestNG testing framework: http://testng.org/doc/ -->
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- https://mvnrepository.com/artifact/org.awaitility/awaitility -->
    <dependency>
      <groupId>org.awaitility</groupId>
      <artifactId>awaitility</artifactId>
      <version>3.0.0</version>
    </dependency>


  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>${maven.compiler.source}</source>
            <target>${maven.compiler.target}</target>
            <showWarnings>${maven.compiler.showWarnings}</showWarnings>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <configuration>
            <systemProperties>
              <property>
                <name>logback.configurationFile</name>
                <value>../classes/conf/logback.xml</value>
              </property>
            </systemProperties>
            <suiteXmlFiles>
              <suiteXmlFile>src/test/resources/tests/apm_tests.xml</suiteXmlFile>
            </suiteXmlFiles>
          </configuration>
        </plugin>
        <plugin>
          <groupId>com.mycila</groupId>
          <artifactId>license-maven-plugin</artifactId>
          <configuration>
            <excludes combine.children="append">
              <!-- Ignore lombok config files -->
              <exclude>**/lombok.config</exclude>
            </excludes>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>